<!DOCTYPE html><html lang="en"><head>    <meta charset="UTF-8">    <title>Markdown to Html</title>    <link href="{{{js_host}}}:3000/json/s.css" type="text/css" rel="stylesheet"></link>    <link href="{{{js_host}}}:3000/stylesheets/index.css" type="text/css" rel="stylesheet"></link>    <script type="text/javascript" src="//cdn.bootcss.com/jquery/2.0.3/jquery.min.js" ></script>    <script type="text/javascript">        php_host = '{{{php_host}}}';        js_host  = '{{{js_host}}}';    </script></head><body>    <div class='btns'>        <input class='fl' id='keyword' type='text' placeholder='请输入接口地址或接口名称' />        <button class='fl' id='search'>搜索</button>        <button class='fr'id='refresh'>重新生成文档</button>    </div>    <div style='clear:both'></div>    <div class='vs'>     {{{content}}}    </div>    <script type="text/javascript" src="{{{js_host}}}:3000/json/c.js" ></script>    <script type="text/javascript">    $(function(){        // 重新生成md文档        $('#refresh').click(function(){            $(this).html('正在更新，请稍后！')            $(this).attr('disabled','disabled');            var that = $(this);            $.get(                php_host,                {},                function(rsp){                     that.html('重新生成文档！')                     that.attr('disabled',false);                },                'json'            );        });        // 搜索        $('#search').click(function(){            $(this).html('正在搜索，请稍后！')            $(this).attr('disabled','disabled');            var that = $(this);            $.get(                php_host,                {keyword:$('#keyword').val()},                function(rsp){                     that.html('搜索！')                     that.attr('disabled',false);                },                'json'            );        });        // 生成单个接口响应        $('.response-btn').click(function(){            $(this).html('点击获取响应结果');            var paramTable = $(this).prev('table');            // 若接口无参数则直接请求接口返回响应结果            // 若已显示输入参数框，则直接请求接口            var hasInput = paramTable.find('tbody tr').eq(0).find('td').length;            if(paramTable.length==0 || hasInput == 3){                var data = {};                paramTable.find('input').each(function(k,v){                    var key = $(this).attr('name');                    var value = $(this).val();                    data[key] = value;                })                data['url'] = $(this).attr('data-url');                data['method'] = $(this).attr('data-method');                var responseArea = $(this).next('.response-area');                responseArea.empty();                $.post(                    php_host+"?act=getResponse",                    data,                    function(rsp){                        parseJson(JSON.stringify(rsp),responseArea);                    },                    'json'                );                return false;            }            // 显示参数输入框            paramTable.find('thead tr').each(function(){                $(this).append('<th>请输入参数</th>');            });            paramTable.find('tbody tr').each(function(){                var name = $(this).find('td').eq(0).html();                $(this).append('<td><input type="text" style="border:0;background:none;" name='+ name +' /></td>');            });        });    })    </script></body></html>